<%if flash[:msg]%>
	<%=flash[:msg]%>
<%end%>

	<div id="Breadcrumb">
		administração > <a href="<%=admin_category_products_path%>">produtos</a>
	</div>
	<div id="Content">
		<span class="Titulo">Produtos</span>
		<div class="Linha"></div>
		<div class="Toolbar">
			<li class="Add"><%= link_to "Novo" , new_admin_category_product_path%></li>
			<li class="Help"><a href="#" id="btnAjuda">Ajuda</a></li>
		</div>
		<%= render :file  => "layouts/_admhelp.html.erb" %>
		<div id="Grid">
			<table width="100%" cellspacing="0" cellpadding="0" border="0">
			<% @Products.each do |p| %>
			<tr class="bgCinzaC">
			<td class="Name"><li class="Bullet">
				<%
					linkPub = "<img src='/images/adm/icones/published/"
					linkPub += p.published.to_s
					linkPub += ".png' border='0' class='status' />"
				%>
				<%= raw linkPub%>
				<%=link_to p.title, admin_category_product_path(@Category, p) %></li></td>
			<td class="Actions">
				<li class="Edit"><%= link_to "Editar", edit_admin_category_product_path(@Category, p)%></li>
				<li class="Del"><%= link_to "Excluir", admin_category_product_path(@Category, p), :method => :delete, :confirm => "Tem certeza?"%></li>
				<li class="Add"><%= link_to "Imagens", admin_product_product_images_path(p)%></li>
			</td>
			</tr>
			<% end %>
			</table>
		</div>
		<div class="Linha"></div>
	</div>
