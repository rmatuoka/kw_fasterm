<%if flash[:msg]%>
	<%=flash[:msg]%>
<%end%>

	<div id="Breadcrumb">
		administração > <a href="<%=admin_contacts_path%>">contatos</a>
	</div>
	<div id="Content">
		<span class="Titulo">Contatos</span>
		<div class="Linha"></div>
		<div class="Toolbar">
			<li class="Help"><a href="#" id="btnAjuda">Ajuda</a></li>
		</div>
		<%= render :file  => "layouts/_admhelp.html.erb" %>
		<div id="Grid">
			<table width="100%" cellspacing="0" cellpadding="0" border="0">
			<% @Contacts.each do |c| %>
			<tr class="bgCinzaC">
			<td class="Name"><li class="Bullet">
				<%=link_to c.name, admin_contact_path(c) %>
				 - <%=link_to c.created_at, admin_contact_path(c) %>
			</li></td>
			<td class="Actions">
				<li class="Del"><%= link_to "Excluir", admin_contact_path(c), :method => :delete, :confirm => "Tem certeza?"%></li>
			</td>
			</tr>
			<% end %>
			</table>
		</div>
		<div class="Linha"></div>
	</div>
