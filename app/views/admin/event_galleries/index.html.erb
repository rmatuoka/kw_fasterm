<%if flash[:msg]%>
	<%=flash[:msg]%>
<%end%>

	<div id="Breadcrumb">
		administração > <a href="<%=admin_event_event_galleries_path%>">galerias</a>
	</div>
	<div id="Content">
		<span class="Titulo">Galerias</span>
		<div class="Linha"></div>
		<div class="Toolbar">
			<li class="Add"><%= link_to "Novo" , new_admin_event_event_gallery_path%></li>
			<li class="Help"><a href="#" id="btnAjuda">Ajuda</a></li>
		</div>
		<%= render :file  => "layouts/_admhelp.html.erb" %>
		<div id="Grid">
			<table width="100%" cellspacing="0" cellpadding="0" border="0">
			<% @EventGalleries.each do |g| %>
			<tr class="bgCinzaC">
			<td class="Name"><li class="Bullet">
				<%
					linkPub = "<img src='/images/adm/icones/published/"
					linkPub += g.published.to_s
					linkPub += ".png' border='0' class='status' />"
				%>
				<%= raw linkPub%>
				<%=link_to g.title, admin_event_event_gallery_path(@Event, g) %></li></td>
			<td class="Actions">
				<li class="Edit"><%= link_to "Editar", edit_admin_event_event_gallery_path(@Event, g)%></li>
				<li class="Del"><%= link_to "Excluir", admin_event_event_gallery_path(@Event, g), :method => :delete, :confirm => "Tem certeza?"%></li>
				<li class="Add"><%= link_to "Imagens", admin_event_gallery_event_gallery_images_path(g)%></li>
			</td>
			</tr>
			<% end %>
			</table>
		</div>
		<div class="Linha"></div>
	</div>
