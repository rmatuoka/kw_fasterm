<%= form_for([:admin, @Notice], :html => { :multipart => :true }) do |f| %>
<% if flash[:msg] %>
<div id="mensagem">
	<h2><%=flash[:msg]%></h2>
	<%= errors_for(@Notice, "Ocorreu um erro").html_safe %>
</div>
<% end %>
	<label>
		Nome:<br>
		<%=f.text_field :title %><br>
	</label><br><br>
	
	<label>
		Imagem Home:<br>
		<%=f.file_field :image %><br>
	</label><br><br>
	
	<label>
		Resumo:<br>
		<%=f.text_field :summary, :style => "width:100%;" %><br>
	</label><br><br>
	
	<label>
		Notícia:<br>
		<%=f.text_area :body, :class => "mceEditor" %><br>
	</label><br><br>
	
	<label>
		Publicado?<br>
		<%=f.radio_button :published, 0 %> Não
		<%=f.radio_button :published, 1 %> Sim  
	</label><br><br>
	
	<button type="submit">Salvar</button>
<% end %>
