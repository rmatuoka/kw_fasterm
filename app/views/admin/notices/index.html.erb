<%if flash[:msg]%>
	<%=flash[:msg]%>
<%end%>

	<div id="Breadcrumb">
		administralção > <a href="<%=admin_notices_path%>">notícias</a>
	</div>
	<div id="Content">
		<span class="Titulo">Notícias</span>
		<div class="Linha"></div>
		<div class="Toolbar">
			<li class="Add"><%= link_to "Novo" , new_admin_notice_path%></li>
			<li class="Help"><a href="#" id="btnAjuda">Ajuda</a></li>
		</div>
		<%= render :file  => "layouts/_admhelp.html.erb" %>
		<div id="Grid">
			<table width="100%" cellspacing="0" cellpadding="0" border="0">
			<% @Notices.each do |n| %>
			<tr class="bgCinzaC">
			<td class="Name"><li class="Bullet">
				<%
					linkPub = "<img src='/images/adm/icones/published/"
					linkPub += n.published.to_s
					linkPub += ".png' border='0' class='status' />"
				%>
				<%= raw linkPub%>
				<%=link_to n.title, admin_notice_path(n) %></li></td>
			<td class="Actions">
				<li class="Edit"><%= link_to "Editar", edit_admin_notice_path(n)%></li>
				<li class="Del"><%= link_to "Excluir", admin_notice_path(n), :method => :delete, :confirm => "Tem certeza?"%></li>
				<li class="Add"><%= link_to "Imagens", admin_notice_notice_images_path(n)%></li>
			</td>
			</tr>
			<% end %>
			</table>
		</div>
		<div class="Linha"></div>
	</div>
